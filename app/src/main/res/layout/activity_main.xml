<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- alert islive wallpaper not active -->
    <TextView
        android:id="@+id/warning_wallpaper_active"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_dark"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="live wallpaper not active"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/warning_wallpaper_active">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#AAA"
                android:orientation="vertical"
                android:showDividers="middle"
                android:visibility="visible">

                <!-- login -->
                <RelativeLayout
                    android:id="@+id/SectionUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/titleUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/titleUser"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                    <TextView
                        android:id="@+id/textUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/titleUser"
                        android:text="@string/user_unknown" />

                </RelativeLayout>
                <!-- Album -->
                <RelativeLayout
                    android:id="@+id/SectionAlbum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/titleAlbum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/album"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                    <TextView
                        android:id="@+id/textAlbum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/titleAlbum"
                        android:text="@string/no_album" />
                </RelativeLayout>
                <!-- Folder -->
                <RelativeLayout
                    android:id="@+id/SectionFolder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/titleFolder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/folder"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                    <TextView
                        android:id="@+id/textFolder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/titleFolder"
                        android:text="@string/folder" />

                </RelativeLayout>
                <!-- Option de téléchargement -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="8dp"
                    android:paddingTop="8dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="8dp">
                    <!-- Quantity -->
                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="8dp"
                        android:text="Options de téléchargement"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                    <RelativeLayout
                        android:id="@+id/SectionSyncQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:paddingLeft="16dp"
                        android:paddingTop="8dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="8dp">

                        <TextView
                            android:id="@+id/titleQuantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/quantity"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                        <EditText
                            android:id="@+id/textQuantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/titleQuantity"
                            android:autofillHints="no"
                            android:ems="5"
                            android:inputType="number" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/titleQuantity"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/textQuantity"
                            android:text="@string/quantity_explenation" />
                    </RelativeLayout>
                    <!-- Rename -->
                    <RelativeLayout
                        android:id="@+id/SectionRename"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:paddingLeft="16dp"
                        android:paddingTop="8dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="8dp">

                        <TextView
                            android:id="@+id/titleRename"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rename"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                        <EditText
                            android:id="@+id/textRename"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/titleRename"
                            android:ems="10" />
                    </RelativeLayout>
                </LinearLayout>
                <!-- Frequencies -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:paddingTop="8dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="8dp"
                        android:text="@string/frequencyGroup"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                    <RelativeLayout
                        android:id="@+id/SectionFreqeuncyUpdatePhotos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:paddingLeft="24dp"
                        android:paddingTop="8dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="8dp">

                        <TextView
                            android:id="@+id/titleFrequenceyUpdatePhotos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/frequencyUpdatePhotos"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                        <EditText
                            android:id="@+id/textFrequencyUpdatePhotos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/titleFrequenceyUpdatePhotos"
                            android:autofillHints="no"
                            android:ems="5"
                            android:inputType="number" />

                        <TextView
                            android:id="@+id/textExplenationFrequencyUpdatePhotos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/titleFrequenceyUpdatePhotos"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/textFrequencyUpdatePhotos"
                            android:text="@string/frequenceUpdatePhotosExplenation" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/SectionFreqeuncySync"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:paddingLeft="24dp"
                        android:paddingTop="8dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="8dp">

                        <TextView
                            android:id="@+id/titleFrequenceySync"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/frequencySync"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                        <EditText
                            android:id="@+id/textFrequencySync"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/titleFrequenceySync"
                            android:autofillHints="no"
                            android:ems="5"
                            android:inputType="number" />

                        <TextView
                            android:id="@+id/textExplenationFrequencySync"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/titleFrequenceySync"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/textFrequencySync"
                            android:text="@string/frequenceSyncExplenation" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/SectionFreqeuncyWallpaper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:paddingLeft="24dp"
                        android:paddingTop="8dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="8dp">

                        <TextView
                            android:id="@+id/titleFrequenceyWallpaper"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/frequencyWallpaper"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                        <EditText
                            android:id="@+id/textFrequencyWallpaper"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/titleFrequenceyWallpaper"
                            android:autofillHints="no"
                            android:ems="5"
                            android:inputType="number" />

                        <TextView
                            android:id="@+id/textExplenationFrequencyWallpaper"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/titleFrequenceyWallpaper"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/textFrequencyWallpaper"
                            android:text="@string/frequenceWallpaperExplenation" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="8dp">

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/SwitchWallPaper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textFrequencyWallpaper"
                        android:text="Changement automatique du fond d'écran "
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"></androidx.appcompat.widget.SwitchCompat>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Désactiver pour changer les fréquences" />
                </LinearLayout>
                <!-- Buttons (sync, scheduler, wallpaper) -->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/SectionSync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="12dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="8dp">

                    <Button
                        android:id="@+id/ChooseOneButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/synchronize" />

                    <Button
                        android:id="@+id/ButtonWallpaper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wallpaper une fois" />
                </androidx.appcompat.widget.LinearLayoutCompat>
                <!-- Last times -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="12dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lastTimesTitle"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                    <LinearLayout
                        android:id="@+id/lastUpdatePhotos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lastUpdatePhotosLabel" />

                        <TextView
                            android:id="@+id/lastUpdatePhotosTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="textEnd" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lastSync"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lastSyncLabel" />

                        <TextView
                            android:id="@+id/lastSyncTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="textEnd" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lastWallpaper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lastWallpaperTimeLabel" />

                        <TextView
                            android:id="@+id/lastWallpaperTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="textEnd" />
                    </LinearLayout>
                </LinearLayout>
                <!-- Result -->
                <RelativeLayout
                    android:id="@+id/SectionResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/titleResult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/titleResult"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                    <TextView
                        android:id="@+id/result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/titleResult"
                        android:text="@string/result" />
                </RelativeLayout>
                <!-- Stat -->
                <RelativeLayout
                    android:id="@+id/SectionStat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/titleStat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/titleResult"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                    <TextView
                        android:id="@+id/stat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/titleStat"
                        android:text="@string/noStat" />
                    android:text="@string/result" />
                </RelativeLayout>
            </LinearLayout>
            <!-- Progress Bar -->
            <RelativeLayout
                android:id="@+id/pb_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#37FFFFFF"
                android:visibility="invisible">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="@style/Widget.AppCompat.ProgressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignWithParentIfMissing="false"
                    android:layout_centerInParent="true"
                    android:minWidth="128dp"
                    android:minHeight="128dp"
                    android:visibility="visible" />
            </RelativeLayout>
        </FrameLayout>
    </ScrollView>
</LinearLayout>